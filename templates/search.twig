{% extends "page.twig" %}

{% block title %}Search{% endblock %}

{% block content %}
    <form method="get" role="search">
        <input class="form-control" type="search" name="query" value="{{ query }}" placeholder="Search for shows, episodes and movies"/>
    </form>

    {% if results is not null %}
        {% if results %}
            <div class="row row-cols-1 row-cols-md-5 g-4 mt-1">
                {% for entry in results %}
                    {% if entry.className == "Episode" %}
                        {% set url = path("episodePage", {"show": entry.season.show.id, "seasonNumber": entry.season.number, "episodeNumber": entry.number}) %}
                    {% elseif entry.className == "Movie" %}
                        {% set url = path("moviePage", {"movie": entry.id}) %}
                    {% endif %}
                    <div class="col">
                        <div class="card">
                            <img class="card-img-top" src="{{ entry.posterImageUrl }}"/>
                            <div class="card-body">
                                <h5 class="card-title"><a class="text-reset text-decoration-none" href="{{ url }}">{{ entry.title }}</a></h5>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-warning mt-3">Nothing results for query '{{ query }}'.</div>
        {% endif %}
    {% endif %}
{% endblock %}