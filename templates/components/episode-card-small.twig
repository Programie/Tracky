<div class="card">
    <img class="card-img-top" src="{{ episode.posterImageUrl }}"/>
    <div class="card-body">
        <h5 class="card-title"><b>{{ episode.season.number }}x{{ episode.number }}</b> {{ episode.title }}</h5>
        {% if withShowTitle|default(false) %}
            <div>{{ episode.season.show.title }}</div>
        {% endif %}
        <div class="text-body-secondary">{{ episode.firstAired|format_date }}</div>
    </div>
</div>