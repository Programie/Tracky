{% set assetEntryPoint = "main" %}

{% extends "page.twig" %}

{% block title %}All shows{% endblock %}

{% block content %}
    <h1>All shows</h1>

    <div class="row row-cols-1 row-cols-md-5 g-4">
        {% for show in shows %}
            <div class="col">
                <a class="card" href="{{ path("showOverviewPage", {"id": show.id}) }}">
                    <img class="card-img-top" src="{{ show.posterImageUrl }}"/>
                    <div class="card-body">
                        <h5 class="card-title">{{ show.title }}</h5>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}