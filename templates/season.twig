{% set assetEntryPoint = "main" %}

{% extends "page.twig" %}

{% block title %}{{ show.title }} - Season {{ season.number }}{% endblock %}

{% block content %}
    <h1>
        <a href="{{ path("showOverviewPage", {"id": show.id}) }}" class="text-reset text-decoration-none">{{ show.title }}</a>
        <span class="fs-4 text-body-secondary">Season {{ season.number }}</span>
    </h1>

    <div class="episode-pagination d-flex justify-content-between mt-3 mb-3">
            <span>
                {% if pagination.previousSeason is not null %}
                    <a class="page-link" href="{{ path("seasonPage", {"id": show.id, "number": pagination.previousSeason}) }}"><i class="fa-solid fa-arrow-left"></i> Season {{ pagination.previousSeason }}</a>
                {% endif %}
            </span>
        <span class="justify-content-end">
                {% if pagination.nextSeason is not null %}
                    <a class="page-link" href="{{ path("seasonPage", {"id": show.id, "number": pagination.nextSeason}) }}">Season {{ pagination.nextSeason }} <i class="fa-solid fa-arrow-right"></i></a>
                {% endif %}
            </span>
    </div>

    <h2>Episodes</h2>
    <div class="row row-cols-1 g-4">
        {% for episode in season.episodes %}
            <div class="col">
                <div class="card">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img class="img-fluid rounded-start" src="{{ episode.posterImageUrl }}"/>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">{{ episode.title }}</h5>
                                <h6 class="card-subtitle text-body-secondary">Episode {{ season.number }}x{{ episode.number }}</h6>
                                <div class="card-text mt-3">
                                    <small class="d-block text-body-secondary"><i class="fa-solid fa-tower-cell"></i> {{ episode.firstAired.format("Y-m-d") }}</small>
                                    {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                                        {% set viewsForUser = episode.getViewsForUser(app.user) %}
                                        {% if viewsForUser|length %}<small class="d-block text-body-secondary"><i class="fa-regular fa-eye"></i> {{ viewsForUser.last.dateTime.format("Y-m-d") }} ({{ viewsForUser|length }})</small>{% endif %}
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}