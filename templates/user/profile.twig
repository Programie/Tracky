{% extends "user/page.twig" %}

{% block title %}{{ user.username }}{% endblock %}

{% block profileContent %}
    <h2>Latest watched episodes</h2>

    {% if latestWatchedEpisodes %}
        {% include "components/history-entry-list-small.twig" with {"entries": latestWatchedEpisodes} %}
    {% else %}
        <div class="alert alert-warning">No episodes available.</div>
    {% endif %}

    <h2 class="mt-3">Latest watched movies</h2>

    {% if latestWatchedMovies %}
        {% include "components/history-entry-list-small.twig" with {"entries": latestWatchedMovies} %}
    {% else %}
        <div class="alert alert-warning">No movies available.</div>
    {% endif %}
{% endblock %}

{% block additional_content %}
    {% include "user/history/additional-content.twig" %}
{% endblock %}