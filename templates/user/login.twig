{% extends "page.twig" %}

{% block title %}{{ "login.title"|trans }}{% endblock %}

{% block content %}
    <form class="w-100 m-auto" id="login-form" action="{{ path("loginPage") }}" method="post">
        <h1 class="h3 mb-3 fw-normal">{{ "login.header"|trans }}</h1>

        <div class="form-floating">
            <input type="text" class="form-control" id="login-username" name="_username" placeholder="Username" value="{{ username }}"/>
            <label for="login-username">{{ "login.username"|trans }}</label>
        </div>

        <div class="form-floating">
            <input type="password" class="form-control" id="login-password" name="_password" placeholder="Password"/>
            <label for="login-password">{{ "login.password"|trans }}</label>
        </div>

        <div class="form-check text-start my-3">
            <input class="form-check-input" type="checkbox" id="login-remember-me" name="_remember_me">
            <label class="form-check-label" for="login-remember-me">{{ "login.remember-me"|trans }}</label>
        </div>

        {% if error %}
            <div class="alert alert-danger"><i class="fa-solid fa-exclamation-triangle"></i> {{ error.messageKey|trans(error.messageData, "security") }}</div>
        {% endif %}

        <button class="btn btn-primary w-100 py-2" type="submit">{{ "login.submit"|trans }}</button>

        {% if registerEnabled %}
            <a href="{{ path("registerPage") }}" class="btn btn-secondary w-100 py-2 my-2">{{ "register.title"|trans }}</a>
        {% endif %}
    </form>
{% endblock %}